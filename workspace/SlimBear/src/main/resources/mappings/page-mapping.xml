<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.slimbear.mapper.Page">
	<select id="SELECT_PRODUCTBANNERTOP_LIST"
		resultType="productBannerTop">
		SELECT * FROM productBannerTop
	</select>

	<select id="SELECT_STORECONFIG">
		SELECT * FROM storeConfig
	</select>
	<select id="SELECT_BANNER_TEXT" resultType="String">
		SELECT bannerText
		FROM storeConfig WHERE uid=1;
	</select>
	<select id="SELECT_BANNER_TOP"
		resultType="com.kgitbank.slimbear.admin.dto.BannerTopDTO">
		SELECT * FROM productBannerTop;
	</select>
	<select id="SELECT_BANNER_TOP_DETAIL"
		resultType="com.kgitbank.slimbear.admin.dto.BannerTopDTO">
		SELECT * FROM productBannerTop
		WHERE uid=#{uid};
	</select>
	<update id="UPDATE_BANNER_TOP">
		UPDATE productBannerTop
		SET image=#{image},
		prod_uid=#{prod_uid}
		WHERE uid=#{uid};
	</update>
	<select id="SELECT_BANNER_TEXT_ADMIN"
		resultType="com.kgitbank.slimbear.admin.dto.BannerTextDTO">
		SELECT * FROM storeConfig;
	</select>
	<select id="SELECT_BANNER_TEXT_DETAIL"
		resultType="com.kgitbank.slimbear.admin.dto.BannerTextDTO">
		SELECT * FROM storeConfig
		WHERE uid=#{uid};
	</select>
	<update id="UPDATE_BANNER_TEXT">
		UPDATE storeConfig
		SET bannerText=#{bannerText}
		WHERE
		uid=#{uid};
	</update>
	<delete id="DELETE_TOP">
		DELETE FROM productBannerTop WHERE uid=#{uid};
	</delete>

	<delete id="DELETE_TEXT">

		DELETE FROM storeConfig WHERE uid=#{uid};
	</delete>

	<insert id="INSERT_TOP">
		INSERT INTO productBannerTop (image, prod_uid) VALUES (#{image},
		#{prod_uid});
	</insert>

	<insert id="INSERT_TEXT">
		INSERT INTO storeConfig (def_delivery_pay, def_mileage_per, text) VALUES (#{def_delivery_pay},#{def_mileage_per},#{text});
	</insert>

</mapper>