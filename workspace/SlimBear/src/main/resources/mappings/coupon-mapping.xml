<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.slimbear.mapper.Coupon"> 
	<!-- 쿠폰(coupon) -->
	<select id="SELECT_COUPON_LIST" resultType="coupon">
		SELECT * FROM coupon
	</select>
	
	<select id="SELECT_COUPON_BY_UID" resultType="coupon">
		SELECT * FROM coupon WHERE uid=#{uid}
	</select>
	
	<insert id="INSERT_COUPON"> 
		INSERT INTO coupon
		(name, type, value, expi_days, min_price)
		VALUES(#{name},#{type},#{value},#{expi_days},#{min_price})
	</insert>
	
	<update id="UPDATE_COUPON">
		UPDATE coupon
		SET name=#{name},type=#{type},value=#{value},expi_days=#{expi_days},min_price=#{min_price}
		WHERE uid=#{uid}
	</update>
</mapper>